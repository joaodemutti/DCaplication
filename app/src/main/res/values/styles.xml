<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>



    <style name="cardView">
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_width">302dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="cardCornerRadius">16dp</item>
    </style>
    <style name="cardImage">
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleX">2</item>
        <item name="android:scaleY">2</item>
        <item name="android:scrollY">-30dp</item>

    </style>
    <style name="cardContent">
        <item name="android:layout_marginLeft">100dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">200dp</item>
    </style>
    <style name="cardNome">
        <item name="android:padding">5dp</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="cardCodiNome">
        <item name="textAllCaps">true</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="heroItem">
        <item name="android:paddingStart">20dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="heroDescricao">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">26dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

</resources>
